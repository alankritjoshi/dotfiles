layout {
  tab name="coding" hide_floating_panes=true {
    pane {
      command "nvim" 
      focus true
    }
    floating_panes {
      pane {
        command "caffeinate"
        args "-d"
        x -1
        y -1
        width "40%"
        height "5%"
      }
      pane {
        x -1
        y 1
        width "40%"
        height "90%"
      }
    }
    pane size=1 borderless=true {
        plugin location="zellij:compact-bar"
    }
  }
}
